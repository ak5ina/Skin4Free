<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:background="@drawable/csgo_bg"
    android:layout_width="fill_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:layout_height="fill_parent">





        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/banner"/>



        <Button
            android:layout_below="@id/logo"
            android:id="@+id/btn_prepare_draw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="Prepare Draw" />

        <Space
            android:layout_width="5dp"
            android:layout_height="0dp"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_prepare_draw"
            android:id="@+id/btn_roll_draw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="find winner" />


        <Space
            android:layout_width="5dp"
            android:layout_height="0dp"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_roll_draw"
            android:id="@+id/btn_extra_ticket_start"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:text="Extra ticket start" />


        <Space
            android:layout_width="5dp"
            android:layout_height="0dp"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_extra_ticket_start"
            android:id="@+id/btn_extra_ticket_end"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:text="Extra ticket end" />


        <Space
            android:layout_width="5dp"
            android:layout_height="0dp"/>


        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_extra_ticket_end"
            android:id="@+id/btn_reset_ticket"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:text="reset_tickets" />




</RelativeLayout>