<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:background="@drawable/box_bg2"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal"

        tools:context=".MainActivity">


        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/logopic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logoskins4free"/>


            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/logopic2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:src="@drawable/logotrans"/>



        </LinearLayout>


        <android.widget.Button
            android:layout_marginLeft="30dp"
            android:layout_below="@id/logo"
            android:id="@+id/btn_back2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/shadowbox"
            android:fontFamily="@font/alegreya_sc_black"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:textSize="8sp" />

        <LinearLayout
            android:id="@+id/previous_giveaway_box"
            android:layout_below="@+id/btn_back2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shadowbox"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center">




            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/topindiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:text="Giveaways combined value  :  "/>


                <TextView
                    android:id="@+id/text_giveaway_combined_value"
                    android:textSize="22sp"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alegreya_sc_black"
                    android:text="0$"/>

            </LinearLayout>



            <ListView
                android:id="@+id/previousga_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>





    </RelativeLayout>


</ScrollView>